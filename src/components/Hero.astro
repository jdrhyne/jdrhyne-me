---
export interface Props {
  name: string;
  username?: string;
  tagline: string;
  avatarSrc?: string;
  avatarAlt?: string;
  socialLinks?: {
    github?: string;
    twitter?: string;
    instagram?: string;
    bluesky?: string;
    linkedin?: string;
    email?: string;
  };
}

const { 
  name, 
  username, 
  tagline, 
  avatarSrc = '/avatar.jpg',
  avatarAlt = 'Profile avatar',
  socialLinks = {} 
} = Astro.props;
---

<section class="hero-section">
  <div class="hero-container">
    <div class="hero-content">
      <!-- Avatar -->
      <a href="/about" class="avatar-link">
        <img 
          src={avatarSrc} 
          alt={avatarAlt}
          class="avatar"
          width="120"
          height="120"
        />
      </a>
      
      <!-- Bio and Social -->
      <div class="bio-and-social">
        <div class="bio-section">
          <h1 class="greeting">
            Hi, I'm {username ? <span class="username">@{username}</span> : <span class="name">{name}</span>}. <a href="/rss.xml" class="rss-link" aria-label="RSS Feed"><svg viewBox="0 0 24 24" fill="currentColor" class="rss-icon"><path d="M3.429 5.1v2.4c3.248 0 6.354 1.29 8.662 3.598 2.309 2.308 3.598 5.414 3.598 8.662h2.4c0-3.937-1.564-7.703-4.356-10.494C10.94 6.473 7.175 4.91 3.43 4.91zm0 4.8v2.4c1.92 0 3.756.768 5.109 2.121 1.353 1.354 2.121 3.188 2.121 5.108h2.4c0-2.587-1.024-5.067-2.852-6.894-1.827-1.828-4.307-2.852-6.894-2.852zM5.55 16.8c-1.176 0-2.129.953-2.129 2.129 0 1.176.953 2.129 2.129 2.129 1.176 0 2.129-.953 2.129-2.129 0-1.176-.953-2.129-2.129-2.129z"/></svg></a>
          </h1>
          <p class="tagline">{tagline}</p>
        </div>
        
        <!-- Social Links -->
        {Object.keys(socialLinks).length > 0 && (
          <nav class="social-links" aria-label="Social media links">
            {socialLinks.github && (
          <a href={socialLinks.github} target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span class="visually-hidden">GitHub</span>
          </a>
        )}
        
        {socialLinks.twitter && (
          <a href={socialLinks.twitter} target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            <span class="visually-hidden">X (Twitter)</span>
          </a>
        )}
        
        {socialLinks.instagram && (
          <a href={socialLinks.instagram} target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            <span class="visually-hidden">Instagram</span>
          </a>
        )}
        
        {socialLinks.bluesky && (
          <a href={socialLinks.bluesky} target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.815 2.736 3.713 3.66 6.383 3.364.136-.02.275-.039.415-.056-.138.022-.276.04-.415.056-3.912.58-7.387 2.005-2.83 7.078 5.013 5.19 6.87-1.113 7.823-4.308.953 3.195 2.05 9.271 7.733 4.308 4.267-4.308 1.172-6.498-2.74-7.078a8.741 8.741 0 0 1-.415-.056c.14.017.279.036.415.056 2.67.297 5.568-.628 6.383-3.364.246-.828.624-5.79.624-6.478 0-.69-.139-1.861-.902-2.206-.659-.298-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8Z"/>
            </svg>
            <span class="visually-hidden">BlueSky</span>
          </a>
        )}
        
        {socialLinks.linkedin && (
          <a href={socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            <span class="visually-hidden">LinkedIn</span>
          </a>
        )}
        
        {socialLinks.email && (
          <a href={`mailto:${socialLinks.email}`} class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <rect x="2" y="4" width="20" height="16" rx="2"/>
              <path d="m22 7-10 5L2 7"/>
            </svg>
            <span class="visually-hidden">Email</span>
          </a>
        )}
          </nav>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    padding: 2rem 0 1.5rem 0;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .hero-container {
    max-width: 56rem;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .hero-content {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    text-align: left;
  }
  
  @media (min-width: 640px) {
    .hero-container {
      padding: 0 1.5rem;
    }
  }
  
  @media (min-width: 1024px) {
    .hero-container {
      padding: 0 2rem;
    }
  }
  
  .avatar-link {
    flex-shrink: 0;
    transition: transform 0.2s ease;
  }
  
  .avatar-link:hover {
    transform: scale(1.05);
  }
  
  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #e5e7eb;
    box-shadow: 0 8px 20px -5px rgb(0 0 0 / 0.1);
  }
  
  .bio-and-social {
    flex: 1;
    min-width: 0;
  }
  
  .bio-section {
    margin-bottom: 1rem;
  }
  
  .greeting {
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 0.5rem;
    font-family: 'Source Sans 3', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    letter-spacing: -0.02em;
    line-height: 1.3;
  }
  
  .username {
    color: #111827;
  }
  
  .name {
    color: #111827;
  }
  
  .rss-link {
    display: inline-flex;
    align-items: center;
    margin-left: 0.5rem;
    color: #3b82f6;
    transition: color 0.2s ease;
  }
  
  .rss-link:hover {
    color: #2563eb;
  }
  
  .rss-icon {
    width: 1.5rem;
    height: 1.5rem;
  }
  
  .tagline {
    font-size: 1rem;
    color: #4b5563;
    line-height: 1.5;
    margin: 0;
    font-weight: 400;
  }
  
  .social-links {
    display: flex;
    justify-content: flex-start;
    gap: 1.25rem;
    flex-wrap: wrap;
  }
  
  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: #4b5563;
    transition: color 0.2s ease, transform 0.2s ease;
  }
  
  .social-link:hover {
    color: #111827;
    transform: translateY(-2px);
  }
  
  .social-icon {
    width: 1.5rem;
    height: 1.5rem;
  }
  
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  
  @media (max-width: 639px) {
    .hero-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 1.5rem;
    }
    
    .bio-section {
      text-align: center;
    }
    
    .social-links {
      justify-content: center;
    }
  }
  
  @media (min-width: 640px) {
    .avatar {
      width: 100px;
      height: 100px;
    }
    
    .greeting {
      font-size: 1.75rem;
    }
    
    .tagline {
      font-size: 1.125rem;
    }
    
    .social-icon {
      width: 1.75rem;
      height: 1.75rem;
    }
  }
</style>