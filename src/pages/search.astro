---
import Layout from '../layouts/Layout.astro';
import Search from '../components/Search.astro';
---

<Layout title="Search - The Rhyne Report" description="Search through all blog posts">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Search</h1>
      <p class="text-xl text-gray-600">
        Find posts by title, content, or tags
      </p>
    </div>

    <Search />

    <div class="mt-12 pt-8 border-t border-gray-200 text-center">
      <a 
        href="/"
        class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Home
      </a>
    </div>
  </div>
</Layout>